<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_product_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:id="@+id/lyt_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/lyt_product_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/lyt_add_product"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_product_code_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_medium"
                android:textSize="12sp"
                tools:text="Popiah Wrapper " />

            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Popiah Wrapper" />

            <TextView
                android:id="@+id/txt_product_changed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_medium"
                android:textSize="12sp"
                tools:text="Popiah Wrapper" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lyt_add_product"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/faint_grey_circle">

            <ImageView
                android:id="@+id/img_favourite"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:src="@drawable/blueadd" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
