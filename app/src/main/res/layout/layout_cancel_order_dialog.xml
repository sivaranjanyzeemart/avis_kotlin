<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent">

    <LinearLayout
        android:id="@+id/lyt_cancel_order_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_rounded_white">

            <TextView
                android:id="@+id/txt_cancel_order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/txt_cancel_order"
                android:textColor="@color/grey_medium"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_cancel_order_title"
                android:background="@color/divider_grey" />

            <TextView
                android:id="@+id/txt_cancel_order_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_divider"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/txt_yes_cancel_this_order"
                android:textColor="@color/text_blue"
                android:textSize="20sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_do_not_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/layout_cancel_order_dialog_btn_do_not_cancel_order_text"
            android:textColor="@color/text_blue"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>
