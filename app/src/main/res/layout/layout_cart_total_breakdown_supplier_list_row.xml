<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_supplierName_breakdown_supplier_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingTop="3dp"
        android:layout_toLeftOf="@+id/lyt_bind_amount_warning_for_supplier"
        tools:text="Good Tiding Foodservices Pvt Ltd" />

    <LinearLayout
        android:id="@+id/lyt_bind_amount_warning_for_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_total_amount_breakdown_supplier_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_medium"
        android:textSize="14sp"
        tools:text="$650.00"
        />

    <ImageView
        android:id="@+id/img_warning_breakdown_supplier_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/warning_red" />

    </LinearLayout>
</RelativeLayout>
