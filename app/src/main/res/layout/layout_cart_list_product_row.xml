<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/marker_red_order_not_allow_product"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lyt_bind_views_product"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/pinky_red" />

    <RelativeLayout
        android:id="@+id/lyt_bind_views_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_draft_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_toLeftOf="@+id/txt_draft_product_quantity"
        android:paddingTop="9dp"
        android:paddingRight="10dp"
        android:textColor="@color/dark_grey"
        android:textSize="14sp"
        tools:text="test product one" />

    <TextView
        android:id="@+id/txt_draft_product_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_draft_product_name"
        android:layout_alignLeft="@+id/txt_draft_product_name"
        android:layout_marginTop="2sp"
        android:layout_toLeftOf="@+id/txt_draft_product_quantity"
        android:paddingRight="10dp"
        android:textColor="@color/grey_medium"
        android:textSize="12sp"
        tools:text="product notes" />

    <TextView
        android:id="@+id/txt_draft_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_draft_product_name"
        android:layout_alignParentRight="true"
        android:paddingTop="9dp"
        android:textColor="@color/dark_grey"
        android:textSize="14sp"
        tools:text="0 kg" />

    <View
        android:id="@+id/divider_product"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txt_draft_product_notes"
        android:layout_alignLeft="@+id/txt_draft_product_notes"
        android:layout_marginTop="8dp"
        android:background="@color/faint_grey" />
    </RelativeLayout>


</RelativeLayout>
