<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="25dp"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/img_adjustment_or_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="13dp"
        app:srcCompat="@drawable/inventory_adjustments" />

    <TextView
        android:id="@+id/txt_time_adjusment_or_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_adjustment_or_count"
        android:layout_toRightOf="@+id/img_adjustment_or_count"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="15.52 . Adjustment" />

    <TextView
        android:id="@+id/txt_adjustment_count_item_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time_adjusment_or_count"
        android:layout_alignLeft="@+id/txt_time_adjusment_or_count"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Australian maple syrup" />

    <TextView
        android:id="@+id/txt_inventory_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_adjustment_count_item_heading"
        android:layout_alignLeft="@+id/txt_time_adjusment_or_count"
        tools:text="Storage cupboard"
        android:textSize="12sp"
        android:textColor="@color/dark_grey"/>
</RelativeLayout>
