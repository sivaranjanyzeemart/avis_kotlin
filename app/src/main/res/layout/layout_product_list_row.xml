<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_product_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lyt_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_product_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/lyt_product_name_details"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lyt_product_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_favourite"
            android:layout_toRightOf="@+id/img_product_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_product_code_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_medium"
                android:textSize="12dp"
                tools:text="Popiah Wrapper " />

            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Popiah Wrapper" />

            <TextView
                android:id="@+id/txt_product_changed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_medium"
                android:textSize="12dp"
                tools:text="Popiah Wrapper" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/img_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/favourite_grey" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/lyt_selection"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:background="@color/faint_white">

        <TextView
            android:id="@+id/txt_product_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_medium"
            android:textSize="14sp"
            tools:text="$4.00/kg" />

        <TextView
            android:id="@+id/txt_product_strike_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/txt_product_unit_price"
            android:paddingStart="7dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_medium"
            android:textSize="11sp"
            tools:text="$4.00/kg" />
        <TextView
            android:id="@+id/txt_on_hand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_medium"
            android:textSize="12sp"
            tools:text="Onhand: " />

        <TextView
            android:id="@+id/txt_on_hand_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/txt_on_hand_title"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_medium"
            android:textSize="12sp"
            tools:text="10 ctn" />
        <TextView
            android:id="@+id/txt_plus_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/txt_on_hand_value"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_medium"
            android:textSize="12sp"
            tools:text=" + " />
        <TextView
            android:id="@+id/txt_incoming_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/txt_plus_symbol"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_medium"
            android:textSize="12sp"
            tools:text="10" />

        <TextView
            android:id="@+id/txt_incoming_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/txt_incoming_value"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_medium"
            android:textSize="12sp"
            tools:text=" exp." />

        <LinearLayout
            android:id="@+id/lyt_quantity_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_reduce_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toLeftOf="@id/txt_quantity_value"
                android:background="@color/transparent"
                android:contentDescription="@string/increase_price"
                android:padding="10dp"
                app:srcCompat="@drawable/blueminus" />

            <TextView
                android:id="@+id/txt_quantity_value"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:background="@color/faint_grey"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="Name" />

            <ImageButton
                android:id="@+id/btn_inc_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:contentDescription="@string/increase_price"
                android:padding="10dp"
                app:srcCompat="@drawable/blueadd" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_add_to_order_and_uom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_add_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical"
                android:padding="5dp"
                android:text="@string/txt_add_to_order"
                android:textColor="@color/text_blue" />

            <TextView
                android:id="@+id/txt_uom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_rounded_corner_border_square"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/text_blue"
                android:textSize="12sp"
                tools:text="Btl" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_more_than"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_supplier_new_order"
        android:background="@color/faint_grey"
        android:clickable="false"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_more_than"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/txt_sku_with_more_than_days"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lyt_empty_space"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/faint_grey"
        android:visibility="gone"
        android:orientation="horizontal" />
</LinearLayout>
