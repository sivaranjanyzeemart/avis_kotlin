<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_other_upload_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_other_upload_options"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:id="@+id/linear_upload_via_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/new_envelop_new_image"
            android:layout_marginTop="13dp"
            android:layout_marginStart="20dp"/>


        <TextView
            android:id="@+id/txt_upload_via_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_other_upload_via_email"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_click_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_send_invoices_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_send_invoices_to_email"
                android:textColor="@color/dark_grey"
                android:textSize="12sp"
                android:layout_marginStart="52dp"/>

            <TextView
                android:id="@+id/txt_email_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_send_email_show"
                android:textColor="@color/dark_grey"
                android:textSize="12sp"
                android:textIsSelectable="true"
                android:layout_marginStart="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_email_copied"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:background="@drawable/faintgrey_solid_round_corner"
            android:layout_marginStart="56dp"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:paddingStart="5dp"
                android:layout_marginTop="4dp"
                android:paddingEnd="1dp"
                android:src="@drawable/copy_icon_new_image" />

            <TextView
                android:id="@+id/txt_copy_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="1dp"
                android:paddingEnd="5dp"
                android:text="@string/txt_copy_email_address"
                android:textColor="@color/text_blue"
                android:textSize="13sp" />
        </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_tick"
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:src="@drawable/tick_green"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/txt_copied_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="31dp"
                android:singleLine="true"
                android:text="@string/txt_email_copied"
                android:textAlignment="inherit"
                android:layout_marginStart="6dp"
                android:textColor="@color/green"
                android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/key_line_grey"/>

    </LinearLayout>
<LinearLayout
    android:id="@+id/linear_other_uploads"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/upload_new_icon_image"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"/>


            <TextView
                android:id="@+id/txt_other_uploads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_other_uploads"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="19dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_for_non_zm_order_uploads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_for_non_zm_order_uploads"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            android:layout_marginStart="52dp"/>

</LinearLayout>




</LinearLayout>