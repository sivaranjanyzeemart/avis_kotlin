<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_favorites_browse_new_order"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@color/white"
    android:layout_marginBottom="3dp">

    <ImageView
        android:id="@+id/img_fav_browse_new_order"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/faint_grey_circle"
        android:scaleType="centerInside"
        android:src="@drawable/favourite_blue" />

    <TextView
        android:id="@+id/txt_favorites_browse_new_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_fav_browse_new_order"
        android:text="@string/txt_favourites"
        android:textColor="@color/text_blue"
        android:textSize="16sp" />
</RelativeLayout>