<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/marker_red_order_special_request"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lyt_special_req_cart_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/pinky_red" />

    <LinearLayout
        android:id="@+id/lyt_special_req_cart_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp">
    <TextView
        android:id="@+id/txt_draft_order_sp_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_rounded_corner_2dp"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="23dp"
        tools:text="hello this is a test special request"/>
    </LinearLayout>

</RelativeLayout>
