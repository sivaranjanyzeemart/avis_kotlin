<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/marker_red_order_not_allow_edit_order"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lyt_delivery_date_edit_order"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/pinky_red" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/faint_grey"
        android:id="@+id/view_divider_edit_order"/>

    <RelativeLayout
        android:id="@+id/lyt_delivery_date_edit_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_divider_edit_order"
        android:paddingLeft="53dp"
        android:paddingTop="13dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp">
        <LinearLayout
            android:id="@+id/lyt_change_delivery_date_draft_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_delivery_truck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/truck_grey" />

            <TextView
                android:id="@+id/txt_delivery_date_draft_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:textColor="@color/text_blue"
                android:textSize="14sp"
                tools:text="Mon, 29 Dec 2019" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_edit_draft_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Edit order"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:background="@color/faint_grey"
        android:layout_below="@+id/lyt_delivery_date_edit_order"/>

</RelativeLayout>
