<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faint_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zeemart.asia.buyers.notifications.NotificationSettings"
    tools:showIn="@layout/activity_notification_settings">
    <RelativeLayout
        android:id="@+id/lyt_notification_settings_header"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/top_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_notification_settings_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:text="@string/txt_manage_notifications"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/notification_settings_image_button_move_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txt_notification_settings_header"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/white_arrow_left" />

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_notification_notifies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_txt_notify"
            android:padding="15dp"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            />
        <RelativeLayout
            android:id="@+id/lyt_notification_on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/txt_notification_remains"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_txt_remains"
                android:textSize="16sp"
                android:padding="18dp"
                android:textColor="@color/black"/>
            <Switch
                android:id="@+id/btn_notification_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="18dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <TextView
            android:id="@+id/txt_notification_email_not_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_txt_not_open"
            android:padding="15dp"
            android:textColor="@color/dark_grey"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp" />
        <RelativeLayout
            android:id="@+id/lyt_notification_price_on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/txt_price_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_items_prices_moved"
                android:textSize="16sp"
                android:padding="18dp"
                android:textColor="@color/black"/>
            <Switch
                android:id="@+id/btn_notification_watchlist_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="18dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_notification_price_moved_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/txt_price_moved_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_prices_moved_by"
                android:textSize="16sp"
                android:padding="18dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="18dp"
                android:text="5%"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:src="@drawable/arrow_right_blue" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_notification_set_alert_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/txt_set_alert_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_set_alert_for"
                android:textSize="16sp"
                android:padding="18dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_alert_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="18dp"
                android:text="@string/txt_watchlist_items_only"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:src="@drawable/arrow_right_blue" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp">
            <ProgressBar
                android:id="@+id/progress_bar_notification"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="2dp"
                android:visibility="gone"
                />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
