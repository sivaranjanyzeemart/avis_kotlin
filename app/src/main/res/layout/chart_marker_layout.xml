<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_marker_graph"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:background="@drawable/marker_2"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        tools:text="Hello" />

    <LinearLayout
        android:id="@+id/layout_week_marker"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:background="@drawable/marker_left"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_current_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="10 Sep: 2019" />

        <TextView
            android:id="@+id/txt_last_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="10 Sep: 2019" />
    </LinearLayout>
</LinearLayout>
