<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/lyt_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bt_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/blue_left_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyt_back_button"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:text="@string/verifycode_enter_password_reset_code"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerTxt"
            android:layout_centerHorizontal="true"
            android:text="@string/txt_enter_the_verification_number"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_email_pwd_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:textSize="14sp"
            tools:text="abc@zeemart.asia" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_email_pwd_reset"
            android:layout_centerHorizontal="true"
            android:text="@string/txt_enter_it_below_to_continue_to_reset_your_password"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            >

            <EditText
                android:id="@+id/code1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:background="@color/faint_grey"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="@string/txt_hint_verify_pwd"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/code2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:background="@color/faint_grey"
                android:gravity="center"
                android:hint="@string/txt_hint_verify_pwd"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/code3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:background="@color/faint_grey"
                android:gravity="center"
                android:hint="@string/txt_hint_verify_pwd"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingRight="12dp"
                android:paddingBottom="4dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/code4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:background="@color/faint_grey"
                android:gravity="center"
                android:hint="@string/txt_hint_verify_pwd"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/code5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:background="@color/faint_grey"
                android:gravity="center"
                android:hint="@string/txt_hint_verify_pwd"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/code6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:background="@color/faint_grey"
                android:gravity="center"
                android:hint="@string/txt_hint_verify_pwd"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lytVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDidntReqChange"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/blue_rounded_corner">

            <TextView
                android:id="@+id/txtVerifyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:padding="16dp"
                android:text="@string/txt_continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBarVerifyCode"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtCodeValidation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="@string/txt_incorrect_code"
            android:textSize="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtDidntReqChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCodeValidation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/didnt_request_password_change"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSkpLoginAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lytVerifyCode"
            android:layout_marginTop="1dp"
            android:text="@string/txt_send_again"
            android:textColor="@color/text_blue"
            android:textSize="14dp" />
    </RelativeLayout>
</RelativeLayout>
