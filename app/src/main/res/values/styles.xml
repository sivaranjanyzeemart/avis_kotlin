<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/text_blue</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>

    <style name="ActivityThemeAnimLeftRight" parent="AppTheme">
        <!--hide the white screen that appears before application launch-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimationsLeftRight</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>
        <item name="colorSwitchThumbNormal">@color/dark_grey</item>
    </style>

    <style name="AppTheme.SliderActivityTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ActivityThemeAnimTopBottom" parent="AppTheme">
        <!--hide the white screen that appears before application launch-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimationsTopBottom</item>
    </style>

    <style name="ActivityAnimationsLeftRight" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/hold_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/hold_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="ActivityAnimationsTopBottom" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_to_top</item>
        <item name="android:activityOpenExitAnimation">@anim/hold_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/hold_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_to_bottom</item>
    </style>

    <style name="DialogAnimationTopBottom" parent="android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_to_top</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom</item>
    </style>

    <style name="noDimTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--hide the white screen that appears before application launch-->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/text_blue</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomDialogForTagsTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationTopBottom</item>
    </style>
    <style name="CustomDialogForTagsTheme1" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationTopBottom</item>
    </style>

    <style name="CustomDialogForTags" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationTopBottom</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">4dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <!--custom AlertDialog Stacked full-width buttons-->
    <style name="StackedAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/StackedButtonBarButtonStyle</item>
    </style>

    <style name="StackedButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/pinky_red</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Spinner">
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:textColorTertiary">@color/text_blue</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>
